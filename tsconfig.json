{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"jsx": "preserve",
		"jsxImportSource": "ripple",
		"isolatedModules": true,
		"emitDeclarationOnly": false,
		"declaration": true,
		"outDir": "dist",
		"removeComments": false
	},
	"include": [
		"./src/",
		"./index.ts"
	],
	"exclude": [
		"node_modules/", 
		"tests/",
	]
}